<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Medicana" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:colorEdgeEffect">@color/medicana_light</item>
        <item name="android:forceDarkAllowed">false</item>

        <item name="colorPrimary">@color/medicana</item>
        <item name="colorPrimaryDark">@color/medicana</item>
        <item name="colorAccent">@color/medicana</item>

    </style>
    <style name="fullRoundEdge">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_full</item>
    </style>
    <style name="bigRoundEdge">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_big</item>
    </style>
    <style name="mediumRoundEdge">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_medium</item>
    </style>
    <style name="smallRoundEdge">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_small</item>
    </style>

    <style name="ToolbarBack" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/medicana</item>
    </style>

    <style name="ToolbarBackWhite" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>

</resources>